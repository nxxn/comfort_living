            <%= link_to "Poltrone", poltrone_path, class: "nav_item #{params[:controller] == 'poltrone' ? 'active' : ''}" %>
          </li>
        <% end %>

        <li>
          <%= link_to "Materassi", materassi_path, class: "nav_item #{params[:controller] == 'materassi' ? 'active' : ''}" %>
        </li>

        <li>
          <%= link_to "Chi Siamo", chi_siamo_path, class: "nav_item #{params[:controller] == 'main' && params[:action] == 'chi_siamo' ? 'active' : ''}" %>
