      <%= link_to root_url, class: "top_logo_link" do %>
        <%= image_tag("logo_add_4.png", class: "img-responsive center_image logo_img") %>
      <% end %>
    </span>

    <span class="block top_nav_heading">
      Produzione Artigianale Su Misura
    </span>
  </div>
</section>

<section>
  <div class="container">
    <div class="col-sm-12 no_side_padding text-center">
      <ul class="list-inline nav_list">
        <li>
          <%= link_to "Home", root_url, class: "nav_item #{params[:controller] == 'main' && params[:action] == 'index' ? 'active' : ''}" %>
        </li>

        <li>
          <%= link_to "Divani", divani_path, class: "nav_item #{params[:controller] == 'divani' ? 'active' : ''}" %>
